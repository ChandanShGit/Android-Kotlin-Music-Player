<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/random_card"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorBlack"
        app:cardCornerRadius="8dp"
        android:layout_marginRight="10dp"
        app:cardElevation="10dp"
        android:elevation="8dp"

>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <ImageView
                android:id="@+id/random_art_cover"
                android:layout_width="match_parent"
                   android:layout_height="match_parent"
                    android:src="@drawable/k"
                   android:scaleType="fitXY"/>

        <View android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="7dp"
              android:layout_alignStart="@+id/lrb"
              android:layout_alignEnd="@+id/lrb"
              android:layout_alignTop="@+id/lrb"
              android:layout_alignBottom="@+id/lrb"
              android:alpha="0.6"
              android:layout_marginLeft="8dp"
              android:background="@drawable/random_card_title"
              android:layout_alignParentStart="true"
             />


        <LinearLayout
                android:id="@+id/lrb"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="35dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:layout_alignParentBottom="true"
        >

            <ImageView
                    android:id="@+id/random_card_play_btn"
                    android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:paddingTop="4dp"
                       android:scaleType="centerInside"
                       android:src="@drawable/ic_play_black"

            />
            <TextView
                    android:id="@+id/random_card_title"
                    android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:text="Song Name"
                      android:paddingTop="8dp"
                      android:maxLines="1"
                      android:layout_marginEnd="10dp"
                      android:textColor="@color/colorWhite"
            />

        </LinearLayout>



    </RelativeLayout>




</android.support.v7.widget.CardView>








